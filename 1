---
- hosts: all
  become: yes
  tasks:
  - name: install apache2, git, wget, tree
    apt:
      name: apache2
      state: present
    when: ansible_os_family == 'Debian'

  - name: start the service
    service:
       name: apache2
       state: restarted
    when: ansible_os_family == 'Debian'


  - name: install httpd
    apt:
        name: httpd
        state: present
    when: ansible_os_family == 'RedHat'

  - name: start the service
    service:
        name: httpd
        state: restarted
    when: ansible_os_family == 'RedHat'

